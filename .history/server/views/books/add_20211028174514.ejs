<%- include('../partials/header.ejs'); %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="NameTextField">Title</label>
                <input type="text" class="form-control" id="NameTextField"
                placeholder="Enter the book title" name="title" value="<%= books.Title %>" required>
              </div>
              <div class="form-group">
                <label for="AuthorTextField">Author</label>
                <input type="text" class="form-control" id="AuthorTextField"
                placeholder="Enter the book's author" name="author" value="<%= books.Author %>"  required>
              </div>
              <div class="form-group">
                <label for="PublishedTextField">Published</label>
                <input type="text" class="form-control" id="PublishedTextField"
                placeholder="Enter the published year" name="published" value="<%= books.Published %>"  required>
              </div>
              <div class="form-group">
                <label for="CategoryTextField">Category</label>
                <input type="text" class="form-control" id="CategoryTextField"
                placeholder="Enter the category" name="category" value="<%= books.Category %>"  required>
              </div>
              <div class="form-group">
                <label for="PriceTextField">Price</label>
                <input type="number" class="form-control" id="PriceTextField"
                placeholder="Enter the price" name="price" value="<%= books.Price %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<%- include('../partials/footer.ejs'); %>