<%- include('../partials/header.ejs'); %>

    <!-- CONTENTS FOR THE ADD PAGE -->
    <div class="container">
      <div class="row">
            <div class="offset-md-3 col-md-6"></div>
            <h1><%= title %></h1>

            <form class="form" method="POST">
              <div class="form-group">
                <label for="titleTextField">Title</label>
                <input type="text" class="form-control" id="titleTextField"
                placeholder="Enter the book title" name="title" required>
              </div>

              <div class="form-group">
                <label for="authorTextField">Author</label>
                <input type="text" class="form-control" id="authorTextField"
                placeholder="Enter the book's author" name="author" required>
              </div>

              <div class="form-group">
                <label for="publishedTextField">Published</label>
                <input type="text" class="form-control" id="publishedTextField"
                placeholder="Enter the published year" name="published" required>
              </div>

              <div class="form-group">
                <label for="categoryTextField">Category</label>
                <input type="text" class="form-control" id="categoryTextField"
                placeholder="Enter the category" name="category" required>
              </div>

              <div class="form-group">
                <label for="priceTextField">Price</label>
                <input type="number" class="form-control" id="priceTextField"
                placeholder="Enter the price" name="price" required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
    </div>

<%- include('../partials/footer.ejs'); %>