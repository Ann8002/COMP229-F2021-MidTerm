<%- include('../partials/header.ejs'); %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- ------------------------ -->
          <!-- FIX THE ADD BUTTON BELOW -->
          <!-- ------------------------ -->
          <a href="/books/details" class="btn btn-info"><i class="fa fa-plus-square"></i> Add Book </a>
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th class="text-center">Title</th>
                  <th class="text-center">Author</th>
                  <th class="text-center">Published</th>
                  <th class="text-center">Category</th>
                  <th class="text-center">Price</th>
                  <th class="text-center"></th>
                  <th class="text-center"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                <tr>
                  <td class="text-center"><%= books[count].title %></td>
                  <td class="text-center"><%= books[count].author %></td>
                  <td class="text-center"><%= books[count].published %></td>
                  <td class="text-center"><%= books[count].category %></td>
                  <td class="text-center"><%= books[count].price %></td>
                  
                  <!-- ------------------------ -->
                    <!-- ADDED EDIT BUTTON  -->
                    <!-- ------------------------ -->
                  <td class="text-center">
                    <a href="/books/edit/<%= books[count]._id %>" class="btn btn-info"><i class="fa fa-pencil"></i> Edit</a>
                    
                  </td>
                  <!-- ------------------------ -->
                    <!-- ADDED DELETE BUTTON -->
                    <!-- ------------------------ -->
                  <td class="text-center">
                    <a href="/books/delete/<%= books[count]._id %>" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>
                    
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<%- include('../partials/footer.ejs'); %>


